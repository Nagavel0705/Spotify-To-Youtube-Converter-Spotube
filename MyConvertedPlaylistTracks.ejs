<!-- THIS PAGE RENDERS THE LINKS OF THE SONGS IN THE CONVERTED PLAYLIST -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotube</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="playlist-header-div">
      <img src="<%= youtubePlaylist[0][0] %>" alt="Playlist banner" width="150px" height="150px"/>
      <h1 class="playlist-header"><%= youtubePlaylist[0][1] %></h1>
    </div>
    <div class="my-playlists-div yt-my-playlists-div">
      <% youtubePlaylist.slice(1).forEach(track=> { %>
        <form action="/convertTrackToYoutube" method="post">
          <div class="playlist-elements yt-playlist-elements yt-playlist-elements-tracks" onclick="this.parentNode.submit()">
            <img class="playlist-banner yt-playlist-banner" src="<%= track[3] %>" alt="Track image">
            <div class="track-info">
              <input type="hidden" name="emailFeedback" value="<%= email %>">
              <input type="hidden" name="songName" value="<%= track[4] %>">
              <input type="hidden" name="playlistName" value="<%= youtubePlaylist[0][1] %>">
              <p class="track-name yt-track-name">
                <%= track[1] %>
              </p>
              <div class="artist-names yt-artist-names">
                <p class="artist-name">
                  <%= track[2] %>
                </p>
              </div>
            </div>
          </div>
        </form>
        <% }); %>
      </div>      
</body>

</html>